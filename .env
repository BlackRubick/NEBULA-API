# Configuración del Servidor
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Configuración de Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nebula_db
DB_USER=nebula_user
DB_PASSWORD=cesar

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-too
REFRESH_TOKEN_EXPIRES_IN=7d

# Configuración de Email (para envío de boletos)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587.env
# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuración de QR
QR_SIZE=300
QR_ERROR_CORRECTION=M

# URLs del Frontend (para emails)
FRONTEND_URL=http://localhost:3000
TICKET_VIEW_URL=http://localhost:3000/ticket

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=./logs/nebula.log

# Configuración de Desarrollo
DEBUG=nebula:*
ENABLE_CORS=true
ENABLE_MORGAN=true